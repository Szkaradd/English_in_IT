<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="learning_sets.EditSet" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_name_dummy"
        android:textSize="30sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:id="@+id/set_name_edit_set"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/finish_btn"
        android:layout_alignParentEnd="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_name_edit_set"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_words_btn"
            android:text="@string/plus"
            android:layout_marginStart="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_terms"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/words_list"
        android:layout_below="@id/set_name_edit_set"
        android:layout_marginTop="70dp"
        android:textSize="12sp"/>

</RelativeLayout>
