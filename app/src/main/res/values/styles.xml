<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">@color/purple_500</item>
        <item name="buttonColor">@color/purple_700</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="colorPrimary">?attr/buttonColor</item>
        <item name="colorPrimaryVariant">?attr/buttonColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/buttonColor</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="backgroundColor">@color/purple_600</item>
        <item name="buttonColor">@color/purple_800</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="colorPrimary">?attr/buttonColor</item>
        <item name="colorPrimaryVariant">?attr/buttonColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/buttonColor</item>
    </style>
</resources>